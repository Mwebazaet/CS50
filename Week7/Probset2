#include <stdio.h>

int main()
{
    char encryText[128];
    int letters;
    printf("Hello Deku scrubs. How many letters would you like to incrypt?\n");
    scanf("%d", &letters );
    int i;
    i = 0;
    while(i < letters){
     printf("Please input the %d letter", i);
     char firstLetter;
     scanf("%s",firstLetter);
     strncat(encryText,&firstLetter, 1);
     i+=1
  
}
